@page
@model Ganaderia.App.Presentacion.Pages.ListModel
@{
}

<h1>Lista de Ganaderos</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Nobres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Correo Electrónico</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var ganadero in Model.Ganaderos)
    {
      <tr>
      <td>@ganadero.Nombres</td>
      <td>@ganadero.Apellidos</td>
      <td>@ganadero.NumeroTelefono</td>
      <td>@ganadero.Correo</td>
    </tr>
    }
  </tbody>
</table>